

// Збираємо
export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:/home/vlad/c2/
gcc -lwiringPi -lm -D USE_WIRINGPI_LIB -g -O0 -Wall -c  -fpic *.c 
rm main.o
gcc -shared -o libtest.so *.o
//Копіюємо бібліотеку у /usr/local/lib
sudo ldconfig

//перевіряємо
gcc -lwiringPi -lm -D USE_WIRINGPI_LIB -g -O0 -Wall -c  -fpic main.c 
gcc -L./ -D USE_WIRINGPI_LIB -g -O0 -Wall -o myprint main.o -ltest -lwiringPi -lm
sudo ./myprint "./LCD_1inch28_1.bmp"і